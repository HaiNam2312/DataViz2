{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Rate of Study Engagement by State/Territory (Australia) â€” Persons (%)", "anchor": "start", "fontSize": 16 },
  "width": 800,
  "height": 520,
  "projection": { "type": "mercator" },
  "data": {
    "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
    "format": { "type": "json", "property": "features" }
  },
  "layer": [
    {
      "mark": { "type": "geoshape", "fill": "#f2f2f2", "stroke": "white" },
      "transform": [
        {
          "calculate": "datum.properties && (datum.properties.STATE_NAME || datum.properties.STATE || datum.properties.name || datum.properties.NAME || '')",
          "as": "StateName"
        }
      ],
      "encoding": {
        "tooltip": { "field": "StateName", "type": "nominal", "title": "State / Territory" }
      }
    },
    {
      "transform": [
        {
          "calculate": "datum.properties && (datum.properties.STATE_NAME || datum.properties.STATE || datum.properties.name || datum.properties.NAME || '')",
          "as": "StateName"
        },
        {
          "calculate": "replace(lower(trim(datum.StateName || '')), /[^a-z0-9 ]/g, '')",
          "as": "StateKey"
        },
        {
          "lookup": "StateKey",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/HaiNam2312/DataViz2/main/data/study_sex_territory.csv",
              "format": { "type": "csv" },
              "transform": [
                {
                  "calculate": "replace(lower(trim(datum.State || '')), /[^a-z0-9 ]/g, '')",
                  "as": "StateKey"
                },
                { "calculate": "toNumber(datum['Male (%)'])", "as": "MaleNum" },
                { "calculate": "toNumber(datum['Female (%)'])", "as": "FemaleNum" },
                { "calculate": "toNumber(datum['Persons (%)'])", "as": "PersonsNum" },
                { "calculate": "datum['Male (%)']", "as": "MaleRaw" },
                { "calculate": "datum['Female (%)']", "as": "FemaleRaw" },
                { "calculate": "datum['Persons (%)']", "as": "PersonsRaw" }
              ]
            },
            "key": "StateKey",
            "fields": ["MaleNum", "FemaleNum", "PersonsNum", "MaleRaw", "FemaleRaw", "PersonsRaw"]
          }
        },
        {
          "calculate": "datum.PersonsNum",
          "as": "rate"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "rate",
          "type": "quantitative",
          "scale": { "scheme": "blues" },
          "legend": { "title": "Persons (%)", "format": ".1f", "orient": "right" }
        },
        "tooltip": [
          { "field": "StateName", "type": "nominal", "title": "State / Territory" },
          { "field": "MaleNum", "type": "quantitative", "format": ".1f", "title": "Male (%)" },
          { "field": "FemaleNum", "type": "quantitative", "format": ".1f", "title": "Female (%)" },
          { "field": "PersonsNum", "type": "quantitative", "format": ".1f", "title": "Persons (%)" }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "legend": { "labelFontSize": 11, "titleFontSize": 12 },
    "title": { "fontSize": 16 }
  }
}
